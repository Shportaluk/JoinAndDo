@using JoinAndDo.Entities
@{
    List<Accession> listMyAccession = ViewBag.listMyAccession;
}

@{
    ViewBag.Title = "Join And Do";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/js_sms.js"></script>
<link href="~/Styles/style_my_accession.css" rel="stylesheet" />

<script>
    function OpenAccession(id) {
        window.location.href = "/JoinAndDo/AccessionId/" + id;
    }
</script>

<div id="blocks">
    @foreach (var accession in listMyAccession)
    {
        <div class="block" onclick="OpenAccession(@accession.Id)">
            <div class="name">@accession.Title</div>
            <div class="rating">
                <p class="number_of_people">@accession.People/@accession.AllPeople</p>
            </div>
            <div class="description">@accession.Text</div>
            @*@if(@accession.isComplete )
            {
                <div id="done"></div>
            }
            else
            {
                <div id="fail"></div>
            }*@
        </div>
    }
</div>