@using JoinAndDo.Entities
@{
    List<MyAccession> listMyAccession = ViewBag.listMyAccession;
    string LeftBoxesCssDisplay = ViewBag.LeftBoxesCssDisplay;
}

@{
    ViewBag.Title = "Join And Do";
    ViewBag.LeftBoxesCssDisplay = LeftBoxesCssDisplay;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Styles/style_my_accession.css" rel="stylesheet" />

<div id="blocks">
    @foreach (var join in listMyAccession)
    {
        <div class="block">
            <div class="name">@join.Title</div>
            <div class="rating">
                <p class="number_of_people">@join.People/@join.AllPeople</p>
            </div>
            <div class="description">@join.Text</div>
            @if( @join.IsComplete )
            {
                <div id="done"></div>
            }
            else
            {
                <div id="fail"></div>
            }
        </div>
    }
</div>