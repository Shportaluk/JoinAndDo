@using JoinAndDo.Entities
@{
    List<MyAccession> listMyAccession = ViewBag.listMyAccession;
}


<!DOCTYPE html>

<html>
<head>
    <title>My accession</title>

    <link href="~/Styles/style.css" rel="stylesheet" />
    <link href="~/Styles/style_my_accession.css" rel="stylesheet" />

    <link rel="stylesheet" media="screen and (min-width:900px) and (max-width:1266px)" href="~/Styles/adapt.css" />
    <link rel="stylesheet" media="screen and (min-width:480px) and (max-width:899px)" href="~/Styles/adapt_phone.css" />
    <link rel="stylesheet" media="screen and (max-width:479px)" href="~/Styles/adapt_phone_vertical.css" />

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/Scripts/sc_link.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>

<body>

    <div id="header">
        <a href="index" id="header_text">Join and Do</a>
        <input id="header_search_text" type="text">
    </div>

    <div id="left_boxes">
        <a href="my_profile">My profile</a>
        <a href="my_message">My message</a>
        <a href="my_accession">My accession</a>
        <a href="deals_accession">Deals accession</a>
    </div>

    <div id="right_boxes">
        <p>Select Category</p>
        <a href="test">Category #1</a>
        <a href="test">Category #2</a>
        <a href="test">Category #3</a>
        <a href="test">Category #4</a>
        <a href="test">Category #5</a>
        <a href="test">Category #6</a>
        <a href="test">Category #7</a>
    </div>

    <div id="blocks">
        @foreach (var join in listMyAccession)
        {
            <div class="block">
                <div class="name">@join.Title</div>
                <div class="rating">
                    <p class="number_of_people">@join.People/@join.AllPeople</p>
                </div>
                <div class="description">@join.Text</div>
                @if( @join.IsComplete )
                {
                    <div id="done"></div>
                }
                else
                {
                    <div id="fail"></div>
                }
            </div>
        }
    </div>

</body>
</html>