@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Join And Do</title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"></script>
    <script src="~/Scripts/js_singl_page_move.js"></script>
    <link href="~/Styles/style_index.css" rel="stylesheet" />
</head>
<body>
    <div id="black_fon">
        <div id="login_or_registration">
            <span data-target="login">Login</span>
            <span data-target="or">or</span>
            <span data-target="registration">Registration</span>
            <div id="form_login">
                    <p data-target="login">Login</p>
                    <input type="text" id="txt_login" name="login" />
                    <p data-target="pass">Pass</p>
                    <input type="password" id="txt_pass" name="pass" />
                    <input type="submit" id="btn_Login" value="Log in" />
                    <input type="button" class="btn_Close" value="Close" />


                    <p id="login_error" />
            </div>
            <div id="form_registration">
                    <p data-target="login">Login</p>
                    <input type="text" id="txt_login" name="login" />
                    <p data-target="pass">Pass</p>
                    <input type="password" id="txt_pass" name="pass" />

                    <p data-target="first_name">First name</p>
                    <input type="text" id="txt_first_name" name="first_name" />
                    <p data-target="last_name">Last name</p>
                    <input type="text" id="txt_last_name" name="last_name" />

                    <input type="submit" id="btn_Registration" value="Registration" />
                    <input type="button" class="btn_Close" value="Close" />

                    <p id="registration_error" />
            </div>
        </div>
    </div>

    <div class="top_message">
        <p id="text"></p>
    </div>

    <div id="header">
        <button class="btn_main" data-target="#page1">JoinAndDo</button>
        <button class="btn_main" data-target="#page2">About</button>
        <button class="btn_main" data-target="#page3">Test</button>
        <button class="btn_main" data-target="#page4">Contact</button>
    </div>


    <div class="layout" id="page1">
        <div id="running_text">
            <p>someone looking for?</p>
            <p>need someone's help?</p>
            <p>You do not know how to do?</p>
        </div>
        <div id="join_center_div">
            <p>Join NOW</p>
        </div>
        <div id="right_man_div">
            <div id="think"></div>
        </div>
    </div>
    <div class="layout" id="page2">
    </div>
    <div class="layout" id="page3">
    </div>
    <div class="layout" id="page4">
    </div>
</body>
</html>