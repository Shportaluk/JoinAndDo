@{
    ViewBag.Title = "Join And Do";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using JoinAndDo.Entities
@{
    List<DealsAccession> listDealsAccession = ViewBag.listDealsAccession;
}

<link href="~/Styles/style_deals_accession.css" rel="stylesheet" />


<div id="blocks">
    @foreach ( var join in listDealsAccession )
    {
        <div class="block">
            <div class="name">@join.Title</div>
            <div class="rating">
                <p class="number_of_people">@join.People/@join.AllPeople</p>
            </div>
            <div class="name_Invitor">@join.User</div>
            <div class="description">@join.Text</div>
            <button class="btn_join">Reject</button>
            <button class="btn_join">Accept</button>
        </div>
    }
</div>