@{
    string RegistrationError = ViewBag.RegistrationError;
}
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>

    <link href="~/Styles/style.css" rel="stylesheet" />

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"></script>

    <script src="~/Scripts/js_draggble_settings.js"></script>
    <script src="~/Scripts/sc_link.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

</head>

<body>
    <script type="text/javascript">
        $( init );
        function init() {
            $('#left_boxes').draggable({
                containment: '#layout',
                cursor: 'move',
                snap: '#blocks'
            });

            $('#right_boxes').draggable({
                containment: '#layout',
                cursor: 'move',
                snap: '#blocks'
            });
        }
    </script>
    <div id="header">
        <div name="JoinAndDo">
            JoinAndDO
        </div>
        <form id="form_search" action="Search" method="get">
            <input type="text" name="txt_search" />
            <input type="submit" value="Search">
        </form>
        <div name="exit" onclick="Logout()">Exit</div>
    </div>

    <div id="array_sms">
        <audio id="new_msg_sound" src="~/Scripts/new_msg.ogg"></audio>
        <audio id="new_msg_in_dialog_sound" src="~/Scripts/new_msg_in_dialog.ogg"></audio>
    </div>
    <div id="left_boxes">

        <div id="boxesLeft_hide">
            <img src="~/Styles/images/arrow-left.png" />
        </div>

        <a href="/JoinAndDo/" id="name">-</a>
        <a href="/JoinAndDo/new_join">New Join</a>
        <a href="/JoinAndDo/find_accession">Find Accession</a>
        <a href="/JoinAndDo/my_message">My message</a>
        <a href="/JoinAndDo/my_accession">My accession</a>
        <a href="/JoinAndDo/deals_accession">Deals accession</a>
    </div>


    <div id="boxesRight_show">
        <img src="~/Styles/images/arrow-right.png" />
    </div>
    <div id="right_boxes">

        <div id="boxesRight_hide">
            <img src="~/Styles/images/arrow-left.png" />
        </div>

        <p>Select Category</p>
        <a href="test">Category #1</a>
        <a href="test">Category #2</a>
        <a href="test">Category #3</a>
        <a href="test">Category #4</a>
        <a href="test">Category #5</a>
        <a href="test">Category #6</a>
        <a href="test">Category #7</a>
    </div>

    <div id="layout">
        @RenderBody()
    </div>

</body>
</html>